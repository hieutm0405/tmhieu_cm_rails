<p id="notice"><%= notice %></p>

<h1>Người dùng</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>      
      <th>Admin</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>       
        <td><%= user.admin %></td>
        <td><%= link_to 'Xem', user %></td>
        <td><%= link_to 'Sửa', edit_user_path(user) %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Thêm mới user', new_user_path %>
